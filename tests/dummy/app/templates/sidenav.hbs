<div class="doc-content" layout="column">
    <div flex layout="column">

        <section class="demo-container md-whiteframe-z1 {{showSourceClass}}">

            {{#md-toolbar classNames='demo-toolbar'}}
                <div class="md-toolbar-tools">
                    <span>Basic Usage</span>
                    <span flex></span>
                    {{#md-button action='showSource' layoutType="row" layout-align="center center" style='min-width: 72px;'}}
                        {{md-icon md-svg-src='images/icons/ic_visibility_24px.svg' style='margin: 0 4px 0 0;'}}
                        <span>Source</span>
                    {{/md-button}}
                </div>
            {{/md-toolbar}}

            {{code-content sourceFiles=sourceFiles showSource=showSource}}



            <demo-include class="sidenavdemoBasicUsage" >

                <div class="demo-content" >
                    {{! BEGIN-SNIPPET sidebar --}}
                    <section layout="row" flex style="height: 500px;">

                        {{#md-sidenav class="md-sidenav-left md-whiteframe-z2"
                        isLockedOpen=sidebarLeftLocked
                        sidebarVisible=sidebarLeftVisible}}

                            {{#md-toolbar}}
                                <h1 class="md-toolbar-tools">Sidenav Left</h1>
                            {{/md-toolbar}}
                            <md-content layout-padding ng-controller="LeftCtrl">
                                {{#md-button action='toggleSidebarLeft' class="md-primary" hide-gt-md=true}}
                                    Close Sidenav Left
                                {{/md-button}}
                                <p hide-md show-gt-md>
                                    This sidenav is locked open on your device. To go back to the default behavior,
                                    narrow your display.
                                </p>
                            </md-content>

                        {{/md-sidenav}}

                        <md-content flex layout-padding>

                            <div layout="column" layout-fill layout-align="top center">
                                <p>
                                    The left sidenav will 'lock open' on a medium (>=960px wide) device.
                                </p>

                                <div>
                                    {{#md-button action='toggleSidebarLeft'
                                    class="md-primary" hide-gt-md=''}}
                                        Toggle left
                                    {{/md-button}}
                                </div>

                                <div>
                                    {{#md-button action='toggleSidebarRight'
                                    class="md-primary"}}
                                        Toggle right
                                    {{/md-button}}
                                </div>
                            </div>

                            <div flex></div>

                        </md-content>

                        {{#md-sidenav class="md-sidenav-right md-whiteframe-z2" sidebarVisible=sidebarRightVisible}}

                            {{#md-toolbar class="md-theme-light"}}
                                <h1 class="md-toolbar-tools">Sidenav Right</h1>
                            {{/md-toolbar}}
                            <md-content ng-controller="RightCtrl" layout-padding>
                                <form>
                                    {{#md-input-container}}
                                        <label for="testInput">Test input</label>
                                        {{#md-input type="text" id="testInput"}}{{/md-input}}
                                    {{/md-input-container}}
                                </form>
                                {{#md-button action='toggleSidebarRight' class="md-primary"}}
                                    Close Sidenav Right
                                {{/md-button}}
                            </md-content>

                        {{/md-sidenav}}

                    </section>

                    {{! END-SNIPPET --}}
                </div>



            </demo-include>


        </section>
    </div>
</div>

