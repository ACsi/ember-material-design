<div class="doc-content" layout="column">
    <div flex layout="column" style="z-index: 1;">

        <div class="doc-description">
            <p>The Dynamic Tabs demo shows how internal tab views can be easily used.</p>
        </div>

        <section class="demo-container md-whiteframe-z1 {{showSourceClass}}">

            {{#md-toolbar classNames='demo-toolbar'}}
                <div class="md-toolbar-tools">
                    <span>Basic Usage</span>
                    <span flex></span>
                    {{#md-button action='showSource' layoutType="row" layout-align="center center" style='min-width: 72px;'}}
                        {{md-icon md-svg-src='images/icons/ic_visibility_24px.svg' style='margin: 0 4px 0 0;'}}
                        <span>Source</span>
                    {{/md-button}}
                </div>
            {{/md-toolbar}}

            {{code-content sourceFiles=sourceFiles showSource=showSource}}

            <demo-include class="demoDynamicTabs">
                <div class="demo-content ">


{{! BEGIN-SNIPPET tabs }}
<div class="sample" layout="column">

    {{#md-tabs selectedIndex=selectedIndex md-border-bottom=''}}

        {{#md-tabs-wrapper}}
            {{#each tab in tabs}}
                {{#md-tab disabled=tab.disabled label=tab.title}}
                    <md-tab-label>{{tab.title}}</md-tab-label>
                {{/md-tab}}
            {{/each}}
        {{/md-tabs-wrapper}}

        {{#md-tabs-content-wrapper}}
            {{#each tab in tabs}}
                {{#md-tab-content}}
                    <div class="demo-tab" style="padding: 25px; text-align: center;">
                        {{tab.title}}
                        <br/>
                        {{#md-button class="md-primary md-raised" disabled=cantRemoveTabs action='removeTab'}}
                            Remove Tab{{/md-button}}
                    </div>
                {{/md-tab-content}}
            {{/each}}
        {{/md-tabs-content-wrapper}}
    {{/md-tabs}}

    <form layout="column"
          style="padding-top:20px;padding-left:20px;" {{action 'addTab' on='submit'}}>
        <div layout="row" layout-sm="column" layout-margin>
            {{#md-input-container value=selectedIndex}}
                <label for="activeIndex">Active Index</label>
                {{md-input type="text" id="activeIndex" disabled=true}}
            {{/md-input-container}}

            {{#md-input-container value=selectedTab.title}}
                <label for="activeTitle">Active Title</label>
                {{md-input type="text" id="activeTitle"}}
            {{/md-input-container}}
        </div>

        <div layout="row" layout-sm="column" layout-margin>
            <span class="title">Add a new Tab:</span>
            {{#md-input-container value=tTitle}}
                <label for="label">Label</label>
                {{md-input type="text" id="label"}}
            {{/md-input-container}}
            {{#md-input-container value=tContent}}
                <label for="content">Content</label>
                {{md-input type="text" id="content"}}
            {{/md-input-container}}
            {{#md-button class="add-tab md-primary" style="max-height: 40px" }}
                Add Tab
            {{/md-button}}
        </div>
    </form>


</div>

{{! END-SNIPPET }}
